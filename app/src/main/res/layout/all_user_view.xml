<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_margin="5dp"
   app:cardElevation="@dimen/margin10"
   app:cardCornerRadius="@dimen/margin10"
   xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
  >
  <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/AllUserProfileImage"
     android:layout_width="80dp"
     android:layout_height="80dp"
     android:elevation="20dp"
     android:scaleType="centerCrop"
     android:src="@drawable/saiful4"
     android:layout_margin="5dp"
     app:civ_border_width="2dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent"

     />




  <TextView
     android:id="@+id/Name"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="10dp"

     android:layout_marginEnd="5dp"
     android:ellipsize="end"
     android:fontFamily="@font/merriweather_italic"
     android:singleLine="true"
     android:text="User Name"
     app:layout_constraintHorizontal_bias=".01"
     android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
     app:layout_constraintStart_toEndOf="@id/AllUserProfileImage"
     app:layout_constraintTop_toTopOf="@id/AllUserProfileImage"
     app:layout_constraintBottom_toBottomOf="@id/AllUserProfileImage"
     app:layout_constraintEnd_toStartOf="@id/ChatIcon"
     />

  <ImageButton
    android:id="@+id/ChatIcon"
     android:layout_width="@dimen/margin30"
     android:background="@drawable/chat"
     android:layout_height="@dimen/margin30"
    app:layout_constraintTop_toTopOf="@id/AllUserProfileImage"
    app:layout_constraintBottom_toBottomOf="@id/AllUserProfileImage"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="@dimen/margin10"/>




</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>